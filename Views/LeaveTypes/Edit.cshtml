@model LeaveTypeEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit LeaveType</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-8">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label asp-for="DefaultDays" class="control-label"></label>
                <input asp-for="DefaultDays" class="form-control" />
                <span asp-validation-for="DefaultDays" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreationDate" /> <!-- so we don't lose it -->
            <br/>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-circle-check"></i>&nbsp;Save</button>&nbsp;
                <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-circle-left"></i>&nbsp;Cancel</a>
            </div>
        </form>
    </div>
</div>
